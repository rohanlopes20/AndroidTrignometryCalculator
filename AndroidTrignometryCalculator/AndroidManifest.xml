<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:orientation="vertical" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent"> 
android:id="@+id/linearLayout"

<ScrollView
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<LinearLayout android:id="@+id/LinearLayout02"
android:layout_width="wrap_content"
android:layout_height="30px"
android:orientation="vertical">

    <TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5pt" 
	android:layout_marginRight="5pt" 
	android:textSize="6pt" 
	android:layout_marginTop="5pt" 	
    android:text="Trignometry Calculator"
    android:textAppearance="?android:attr/textAppearanceSmall" />
   
   <LinearLayout 
android:layout_width="match_parent" 
android:layout_height="wrap_content" 
android:id="@+id/linearLayout5" 
android:layout_marginLeft="10pt" 
android:layout_marginRight="10pt" 
android:layout_marginTop="3pt"> 

<EditText
    android:id="@+id/etNum3"
    android:layout_width="141dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="5pt"
    android:layout_marginLeft="70pt" 
    android:inputType="numberDecimal" >
 
</EditText> 
 </LinearLayout>
 <LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5pt"
    android:layout_marginRight="5pt"
    android:layout_marginTop="3pt" >

    <Button
        android:id="@+id/btnsin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin(A)"
        android:textSize="6pt" >
    </Button>

    <Button
        android:id="@+id/btncos"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:text="cos(A)"
        android:textSize="6pt" />

    <Button
        android:id="@+id/btncosec"
        android:layout_width="54dp"
        android:layout_height="match_parent"
        android:text="cosec(A)"
        android:textSize="6pt" >

    </Button>

    <Button
        android:id="@+id/btnsec"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:text="sec(A)"
        android:textSize="6pt" >

    </Button>

    <Button
        android:id="@+id/btntan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="tan(A)"
        android:textSize="6pt" >

    </Button>

    <Button
        android:id="@+id/btncot"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_weight="2.71"
        android:text="cot(A)"
        android:textSize="6pt" >
   </Button>
</LinearLayout>
<LinearLayout 
android:layout_width="match_parent" 
android:layout_height="wrap_content" 
android:id="@+id/linearLayout6" 
android:layout_marginLeft="10pt" 
android:layout_marginRight="10pt" 
android:layout_marginTop="20pt"> 
<TextView 
android:layout_height="wrap_content" 
android:layout_width="match_parent" 
android:layout_marginLeft="5pt" 
android:layout_marginRight="5pt" 
android:textSize="12pt" 
android:layout_marginTop="3pt" 
android:id="@+id/tvResult" 
android:gravity="center_horizontal"> 
</TextView>
</LinearLayout>
<LinearLayout 
android:layout_width="match_parent" 
android:layout_height="wrap_content" 
android:id="@+id/linearLayout1" 
android:layout_marginLeft="10pt" 
android:layout_marginRight="10pt" 
android:layout_marginTop="20pt"> 
<EditText 
android:layout_weight="1" 
android:layout_height="wrap_content" 
android:layout_marginRight="5pt" 
android:id="@+id/etNum1" 
android:layout_width="match_parent" 
android:inputType="numberDecimal"> 
</EditText> 
<EditText 
android:layout_height="wrap_content" 
android:layout_weight="1" 
android:layout_marginLeft="5pt" 
android:id="@+id/etNum2" 
android:layout_width="match_parent" 
android:inputType="numberDecimal"> 
</EditText> 
</LinearLayout> 

<LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5pt"
    android:layout_marginRight="5pt"
    android:layout_marginTop="3pt" >

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Sin(A+B)"
        android:textSize="8pt" >
    </Button>

    <Button
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Sin(A-B)"
        android:textSize="6pt" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="Cos(A+B)"
        android:textSize="6pt" >

    </Button>

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="132dp"
        android:layout_height="match_parent"
        android:layout_weight="2.71"
        android:text="Cos(A-B)"
        android:textSize="6pt" >

    </Button>
</LinearLayout>
 <LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5pt"
    android:layout_marginRight="5pt"
    android:layout_marginTop="3pt" >

    <Button
        android:id="@+id/btntanplus"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:text="tan(A+B)"
        android:textSize="6pt" >
    </Button>

    <Button
        android:id="@+id/btntanminus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tan(A-B)"
        android:textSize="6pt" />

    <Button
        android:id="@+id/btncotplus"
        android:layout_width="133dp"
        android:layout_height="match_parent"
        android:layout_weight="1.43"
        android:text="Cot(A+B)"
        android:textSize="6pt" >

    </Button>

    <Button
        android:id="@+id/btncotminus"
        android:layout_width="132dp"
        android:layout_height="match_parent"
        android:layout_weight="2.71"
        android:text="Cot(A-B)"
        android:textSize="6pt" >

    </Button>
</LinearLayout>
 
<TextView 
android:layout_height="wrap_content" 
android:layout_width="match_parent" 
android:layout_marginLeft="5pt" 
android:layout_marginRight="5pt" 
android:textSize="12pt" 
android:layout_marginTop="3pt" 
android:id="@+id/tvResult1" 
android:gravity="center_horizontal"> 
</TextView>

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="90pt" 
	android:layout_marginRight="5pt" 
	android:textSize="8pt" 
	android:layout_marginTop="8pt" 	
    android:text="Prasant Tandel &amp; Mahesh More"
    android:textAppearance="?android:attr/textAppearanceSmall" />
 </LinearLayout>
</ScrollView>
</LinearLayout>
